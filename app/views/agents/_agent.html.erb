<tr id="<%= dom_id(agent) %>">
  <th scope="row"><%= agent.id %></th>
  <td><%= agent.name %></td>
  <td><%= agent.email %></td>
  <td><%= agent.contract_date %></td>
  <td><%= number_to_percentage(agent.base_commission) %></td>
  <td>
    <% if can? :manage, Agent %>
        <%= link_to 'Editar', edit_agent_path(agent), class: "btn btn-sm btn-secondary" %>
        <%= link_to 'Eliminar', agent, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
    <% end %>
  </td>
</tr>